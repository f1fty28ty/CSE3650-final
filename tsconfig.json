{
  "compilerOptions": {
    "target": "esnext", // Use modern JavaScript features
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // Include DOM and ESNext features
    "allowJs": true, // Allow JavaScript files
    "skipLibCheck": true, // Skip type checks for node_modules
    "strict": true, // Enable strict mode
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing
    "noEmit": true, // Don't emit output files
    "esModuleInterop": true, // Enable ES module interop
    "module": "esnext", // Use ESNext module system
    "moduleResolution": "node", // Standard Node.js resolution
    "resolveJsonModule": true, // Allow importing JSON files
    "isolatedModules": true, // Isolated transpilation per file
    "jsx": "preserve", // Recommended for React 17+
    "incremental": true, // Speed up incremental builds
    "plugins": [
      {
        "name": "next"
      } // Next.js plugin
    ],
    "baseUrl": ".", // Base URL for module resolution
    "paths": {
      "@/*": [
        "./*"
      ] // Alias for project files
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts" // Include .next types
  ],
  "exclude": [
    "node_modules"
  ] // Exclude node_modules
}
